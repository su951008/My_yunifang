<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <data  class ="Cart_empty"
        >
        <variable
            name="finish"
            type="com.bawei.fragment.shopping.Frag_Shopping"></variable>
    </data>
<RelativeLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/a1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/shopping_trolley_empty"
        android:layout_centerInParent="true"
        />
    <TextView
        android:id="@+id/a2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_below="@id/a1"
        android:layout_centerHorizontal="true"
        android:text="购物车还是空的哦"
        />
    <TextView
        android:id="@+id/a3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_below="@id/a2"
        android:layout_centerHorizontal="true"
        android:text="快去逛逛吧～"/>

    <TextView
        android:id="@+id/guan"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="逛一逛"
        android:gravity="center"
        android:background="#FFF49D9D"
        android:textColor="#ffff"
     android:onClick="@{()-> finish.finish() }"
        android:layout_below="@id/a3"
        />
</RelativeLayout>
</layout>